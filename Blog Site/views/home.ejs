<%- include('partials/header'); -%>


<h1> Home </h1>
<p> <%= startingContent %> </p>

<%# Displays the posts in reverse chronological order.
    If the post content is more than 100 words truncate the text and display a
    'read more' link to the post page %>
<% posts.slice().reverse().forEach( post => { %>
  <h3> <%= post.title %></h3>

  <% if (post.content.length > 100) { %>
    <p> <%= post.content.slice(0, 100) %> ... <a href='posts/<%=post._id%>'>Read More</a> </p>
  <% } else { %>
    <p> <%= post.content %></p>
  <% } %>
<% }) %>

<%- include('partials/footer'); -%>
