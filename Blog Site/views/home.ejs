<%- include('partials/header'); -%>


<h1> Home </h1>
<p> <%= startingContent %> </p>

<% posts.slice().reverse().forEach( post => { %>
  <h3> <%= post.title %></h2>

  <% if (post.content.length > 100) { %>
    <p> <%= post.content.slice(0, 100) %> ... <a href='posts/<%=post._id%>'>Read More</a> </p>
  <% } else { %>
    <p> <%= post.content %></p>
  <% } %>
<% }) %>

<%- include('partials/footer'); -%>
